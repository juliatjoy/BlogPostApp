<div class="wrapper" style="background: #efeff3;">
  <% @blog_posts.each do |blog_post| %>
    <div class="top"><div class="title"><h1>My Blog</h1></div></div>
    <div class="content">\
      <div class="card first">
        <h2>
          <%= link_to blog_post.try(:title), blog_post %>
        </h2>
        <p class="date"><%= blog_post.created_at.strftime("%e %b, %Y") %></p>
        <p class="text">
          <%= blog_post.try(:body) %>
        <br />
        </p>
      </div>
    </div>
  <% end %>
</div>
